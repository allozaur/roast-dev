{
  "manifest_version": 3,
  "name": "Roast",
  "version": "0.0.2",
  "description": "Roast your own code on GitHub and submit better Pull Requests",
  "icons": {
    "16": "png/icons/icon16.png",
    "48": "png/icons/icon48.png",
    "128": "png/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "identity",
    "storage"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/pull/*/files"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://github.com/*",
    "https://accounts.google.com/*",
    "*://*.supabase.co/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "oauth2": {
    "client_id": "870151337771-riukv18cebapb84cqomildqgqfldvqcj.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "key": ""
}
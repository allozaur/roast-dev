{
  "manifest_version": 3,
  "name": "roast.dev",
  "version": "0.0.1",
  "description": "Extracts code changes from GitHub PRs for analysis",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/pull/*/files"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ]
}